{
  "name": "normandy-devtools",
  "version": "1.0.0",
  "description": "A set of tools for interacting with the Firefox Normandy client",
  "homepage_url": "https://github.com/mozilla/normandy-devtools",
  "private": true,
  "license": "MPLv2",
  "scripts": {
    "build": "npm-run-all clean build:webpack build:extension build:finalize",
    "build:extension": "web-ext build -s dist --overwrite-dest",
    "build:webpack": "webpack --mode production --progress",
    "build:webpack-dev": "webpack --mode development --progress --hide-modules",
    "build:finalize": "mv web-ext-artifacts/*.zip web-ext-artifacts/normandy-devtools.zip",
    "clean": "rimraf dist web-ext-artifacts .webpack-cache",
    "lint": "npm-run-all lint:eslint",
    "lint-fix": "npm-run-all lint:eslint-fix",
    "lint:eslint": "eslint webpack.config.js extension",
    "lint:eslint-fix": "yarn run lint:eslint --fix",
    "test": "jest",
    "watch": "npm-run-all build:webpack-dev --parallel --race watch:*",
    "watch:extension": "web-ext run -s dist -f nightly",
    "watch:webpack": "webpack --progress --mode development --watch",
    "postinstall": "yarn clean"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-async-generator-functions": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-decorators": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.5",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.3",
    "@typescript-eslint/eslint-plugin": "2.29.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.4.0",
    "babel-loader": "8.1.0",
    "babel-preset-rsuite": "4.0.1",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "3.5.2",
    "dotenv-webpack": "1.7.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-fetch-options": "0.0.5",
    "eslint-plugin-html": "6.0.2",
    "eslint-plugin-mozilla": "2.4.0",
    "eslint-plugin-no-unsanitized": "3.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "extract-text-webpack-plugin": "3.0.2",
    "faker": "4.1.0",
    "file-loader": "6.0.0",
    "generate-json-webpack-plugin": "0.3.1",
    "html-webpack-plugin": "4.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.4.0",
    "less": "3.11.1",
    "less-loader": "5.0.0",
    "mini-css-extract-plugin": "0.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "style-loader": "1.1.4",
    "stylelint": "13.3.3",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.0.0",
    "typescript": "3.8.3",
    "web-ext": "4.2.0",
    "webpack": "4.43.0",
    "webpack-bundle-analyzer": "3.7.0",
    "webpack-cli": "3.3.11",
    "webpack-fix-style-only-entries": "0.4.0"
  },
  "dependencies": {
    "@babel/preset-typescript": "7.9.0",
    "@types/rc-tree": "1.11.3",
    "@types/react-router": "5.1.5",
    "@types/react-router-dom": "5.1.4",
    "@typescript-eslint/parser": "2.29.0",
    "auth0-js": "9.13.2",
    "autobind-decorator": "2.4.0",
    "cache-loader": "4.1.0",
    "codemirror": "5.53.2",
    "highlight.js": "10.0.0",
    "js-yaml": "3.13.1",
    "rc-tree": "3.1.5",
    "react": "16.13.1",
    "react-codemirror2": "7.1.0",
    "react-dom": "16.13.1",
    "react-error-boundary": "1.2.5",
    "react-router-dom": "5.1.2",
    "react-split": "2.0.7",
    "rsuite": "4.3.4",
    "web-ext-types": "3.2.1"
  }
}
